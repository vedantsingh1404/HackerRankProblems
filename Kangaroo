#include<iostream>

using namespace std;

int main(){
    int x1, v1, x2, v2;
    cin>>x1>>v1>>x2>>v2;
    if((x2 - x1) == 0)cout<<"YES";
    else if((v2 - v1) == 0) cout<<"NO";
    else if((x2 - x1)*(v2 - v1) > 0) cout<<"NO";
    else{
        if((x2 - x1) % (v2 - v1) == 0) cout<<"YES";
        else cout<<"NO";
    }
}

